<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a1691595.googleplaymusic.MainActivity">

    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="502dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="1dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15"
                        android:paddingTop="2dp"
                        app:srcCompat="@drawable/gg" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1.18"
                        android:paddingTop="21dp"
                        android:text=" Google Play Music"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="61dp"
                        android:layout_height="68dp"
                        android:layout_marginRight="25dp"
                        android:layout_weight="2.74"
                        android:paddingRight="50dp"
                        android:paddingTop="6dp"
                        android:scaleType="matrix"
                        app:srcCompat="@drawable/a" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="match_parent"
                    android:layout_height="321dp"
                    app:srcCompat="@drawable/bb" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="323dp"
                    app:srcCompat="@drawable/tt" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="377dp"
        android:layout_height="99dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.47">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="74dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/uu" />

        <LinearLayout
            android:layout_width="129dp"
            android:layout_height="114dp"
            android:layout_weight="0.87"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:text="The Universe"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Headhunterz"
                android:textSize="27dp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="93dp"
            android:layout_height="114dp"
            app:srcCompat="@drawable/ar"
            android:layout_weight="0.13" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
